@page
@model Pages.MediaFiles.CreateModel

@{
    ViewData["Title"] = "Subir Archivos Multimedia";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Subir Archivos Multimedia</h1>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="Files" class="form-label">Seleccionar Archivos</label>
            <input asp-for="Files" type="file" id="Files" class="form-control" multiple />
            <span asp-validation-for="Files" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Type" class="form-label">Tipo de Archivo</label>
            <select asp-for="Type" class="form-control" required>
                <option value="">Seleccione un tipo</option>
                <option value="Image">Imagen</option>
                <option value="Video">Video</option>
                <option value="Audio">Audio</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <input asp-for="MemoryId" id="MemoryId" class="form-control" type="number" readonly hidden/>
            <span asp-validation-for="MemoryId" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-lg">Subir Archivos</button>
        </div>
    </form>
</div>
