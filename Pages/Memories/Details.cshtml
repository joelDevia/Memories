@page "{id}"
@model Pages.Memories.DetailsModel
@using Models

@{
    ViewData["Title"] = "Detalles del Recuerdo";
    var memory = Model.Memory;
}

<div class="memory-detail-container">
    <div class="memory-detail-header text-center">
        <h1>@memory.Title</h1>
        <p class="memory-date">@memory.Date.ToString("MMMM dd, yyyy")</p>
    </div>

    <div class="memory-detail-body">
        <p class="memory-text">@memory.Text</p>

        <div class="media-files visual-files text-center">
            @foreach (var media in memory.MediaFiles.Where(m => m.Type == MediaType.Image || m.Type == MediaType.Video))
            {
                <div class="media-file">
                    @if (media.Type == MediaType.Image)
                    {
                        <img src="@media.FilePath" alt="Imagen de @memory.Title" class="media-image" />
                    }
                    else if (media.Type == MediaType.Video)
                    {
                        <video controls class="media-file-item">
                            <source src="@media.FilePath" type="video/mp4" />
                            Tu navegador no soporta el elemento de video.
                        </video>
                    }
                </div>
            }
        </div>

        <!-- Audios: separados en su propio bloque -->
        <div class="media-files audio-files text-center">
            @foreach (var media in memory.MediaFiles.Where(m => m.Type == MediaType.Audio))
            {
                <div class="audio-file">
                    <audio controls class="audio-player">
                        <source src="@media.FilePath" type="audio/mp3" />
                        Tu navegador no soporta el elemento de audio.
                    </audio>
                </div>
            }
        </div>
    </div>

    <div class="text-center">
        <a href="/Memories/Index?page=@Model.Page" class="btn btn-secondary">Volver</a>
    </div>
</div>

<!-- Estilos para la página -->
<style>
    body {
        background: #f3f4f9;
        font-family: 'Georgia', serif;
        color: #555;
    }

    .memory-detail-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 8px 16px rgba(165, 115, 168, 0.2);
        border: 2px solid #f6b3e4;
        position: relative;
    }

        .memory-detail-container::before {
            position: absolute;
            top: -20px;
            left: 50%;
            transform: translateX(-50%);
            background: #f6b3e4;
            color: white;
            font-weight: bold;
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 1rem;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .memory-detail-header h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #a573a8;
        margin-bottom: 10px;
        text-align: center;
    }

    .memory-detail-header .memory-date {
        font-size: 1.25rem;
        font-style: italic;
        margin-top: 10px;
        text-align: center;
        color: #6a4c9c;
    }

    .memory-detail-body .memory-text {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #444;
        margin-top: 20px;
        text-align: justify;
    }

    .media-files {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
    }

    .media-file {
        max-width: 100%;
        display: inline-block;
        margin-bottom: 20px;
        text-align: center;
    }

    .media-image {
        max-width: 100%;
        border-radius: 10px;
        max-height: 400px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .media-file-item {
        max-width: 100%;
        border-radius: 10px;
        max-height: 400px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-secondary {
        background-color: #f6b3e4;
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 25px;
        display: inline-block;
        margin-top: 30px;
    }

        .btn-secondary:hover {
            background-color: #d88fbb;
            transform: scale(1.1);
            transition: all 0.3s ease-in-out;
        }

    /* Visuales (imagen y video) */
    .visual-files {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
    }

    .media-image,
    .media-file-item {
        max-width: 100%;
        max-height: 400px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Audios (bloque separado y más limpio) */
    .audio-files {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin-top: 40px;
        padding: 20px;
        background-color: #f9d3e6;
        border-radius: 15px;
        box-shadow: 0 4px 12px rgba(165, 115, 168, 0.15);
    }

    .audio-file {
        flex: 0 0 auto;
    }

    .audio-player {
        width: 250px;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }
</style>

